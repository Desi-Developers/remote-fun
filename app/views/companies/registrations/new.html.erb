<h3 class="mt-2">Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "companies/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control form-control-sm mt-2' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm mt-2' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-sm mt-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm mt-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-sm mt-2' %>
  </div>
<% end %>

<%= render "companies/shared/links" %>
